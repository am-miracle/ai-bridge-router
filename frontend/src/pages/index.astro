---
export const prerender = true;

import MainLayout from "../layouts/main.astro";
import { AnimatedHero } from "@/components/homepage/AnimatedHero";
import { AnimatedFeatureCard } from "@/components/homepage/AnimatedFeatureCard";
import { AnimatedStatCard } from "@/components/homepage/AnimatedStatCard";
import { WelcomeModal } from "@/components/WelcomeModal";
import { heroContent, features, stats } from "@/config/homepage";
import { defaultMeta } from "@/config/site";

const content = {
  title: defaultMeta.title,
  description: defaultMeta.description,
  keywords: defaultMeta.keywords,
};
---

<MainLayout content={content}>
  <WelcomeModal client:load />

  <!-- Main content wrapper for better SEO structure -->
  <article class="w-full">
    <!-- Hero Section -->
    <section
      class="min-h-screen flex items-center justify-center py-20"
      aria-labelledby="hero-heading"
    >
      <div class="w-full max-w-6xl mx-auto px-4">
        <AnimatedHero
          title={heroContent.title}
          description={heroContent.description}
          primaryCTA={heroContent.primaryCTA}
          secondaryCTA={heroContent.secondaryCTA}
          client:load
        />
      </div>
    </section>

    <!-- Features Section -->
    <section
      class="min-h-screen flex items-center justify-center py-20"
      aria-labelledby="features-heading"
    >
      <div class="w-full max-w-7xl mx-auto px-4">
        <header class="text-center mb-12 md:mb-16">
          <h2 id="features-heading" class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
            Why Choose Bridge Router?
          </h2>
          <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto">
            Experience seamless cross-chain transfers with the best rates and security
          </p>
        </header>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {
            features.map((feature, index) => (
              <AnimatedFeatureCard feature={feature} index={index} client:load />
            ))
          }
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section
      class="min-h-screen flex items-center justify-center py-20 relative"
      aria-labelledby="stats-heading"
    >
      <div
        class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-blue-500/5 -z-10 rounded-2xl"
        aria-hidden="true"
      >
      </div>
      <div class="w-full max-w-6xl mx-auto px-4">
        <header class="text-center mb-12 md:mb-16">
          <h2 id="stats-heading" class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
            Trusted by Thousands
          </h2>
          <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto">
            Real-time metrics that matter
          </p>
        </header>
        <div
          class="grid grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 p-6 md:p-8 rounded-2xl border bg-gradient-to-br from-card/80 to-card/40 backdrop-blur-sm shadow-2xl"
          role="list"
        >
          {stats.map((stat, index) => <AnimatedStatCard stat={stat} index={index} client:load />)}
        </div>
      </div>
    </section>

    <!-- SEO Content Section (hidden but readable by search engines) -->
    <section class="sr-only" aria-label="Additional Information">
      <h2>Best Cross-Chain Bridge Comparison Platform</h2>
      <p>
        Bridge Router helps you compare and find the best cross-chain bridge routes across multiple
        blockchains including Ethereum, Polygon, Arbitrum, Optimism, Base, zkSync, Scroll, Linea,
        and more. We aggregate quotes from 9+ leading bridge protocols to help you save on fees and
        find the fastest transfer routes.
      </p>
      <h3>Supported Bridges</h3>
      <ul>
        <li>Across Protocol - Optimistic bridge with fast transfers</li>
        <li>Stargate Finance - LayerZero powered omnichain liquidity transport</li>
        <li>Wormhole Bridge - Guardian network for cross-chain messaging</li>
        <li>Synapse Protocol - Cross-chain AMM with canonical bridges</li>
        <li>cBridge by Celer - State Guardian Network for secure transfers</li>
        <li>LayerZero - Omnichain messaging protocol</li>
        <li>Orbiter Finance - Maker-taker model for L2 transfers</li>
        <li>Axelar Network - Universal cross-chain communication</li>
        <li>Hop Protocol - Scalable rollup-to-rollup bridge</li>
      </ul>
      <h3>Supported Blockchains</h3>
      <ul>
        <li>Ethereum Mainnet</li>
        <li>Polygon (MATIC)</li>
        <li>Arbitrum One</li>
        <li>Optimism</li>
        <li>Base</li>
        <li>zkSync Era</li>
        <li>Scroll</li>
        <li>Linea</li>
        <li>BNB Smart Chain</li>
        <li>Avalanche</li>
        <li>Fantom</li>
        <li>Mode Network</li>
        <li>Blast</li>
        <li>Lisk</li>
        <li>Redstone</li>
        <li>Zora</li>
      </ul>
    </section>
  </article>
</MainLayout>
