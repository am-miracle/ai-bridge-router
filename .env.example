
HOST=0.0.0.0
PORT=8080
ALLOWED_ORIGINS=http://localhost:3000


DATABASE_URL=
DATABASE_MIN_CONNECTIONS=1


REDIS_URL=
REDIS_POOL_SIZE=10
REDIS_CONNECTION_TIMEOUT=30
REDIS_COMMAND_TIMEOUT=3

RUST_LOG=info
RUST_LOG_FORMAT=pretty

# Default admin API key (CHANGE IMMEDIATELY after first setup)
