ENABLE_TELEMETRY=true
ENABLE_ML_SCORING=false

# Etherscan V2 API Key (Optional - works across 50+ chains with a single key!)
# Get your API key from https://etherscan.io/apis
# Supports: Ethereum, Arbitrum, Optimism, Polygon, Base, Avalanche, BSC, Scroll, Blast, and more
ETHERSCAN_API_KEY=

# Token Price API (Optional - will use fallback values if not provided)
# Get free API key from https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=
